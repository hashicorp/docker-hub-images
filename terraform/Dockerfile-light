FROM alpine:latest
MAINTAINER "Tim Fall <tim@hashicorp.com>"

ENV TERRAFORM_VERSION=0.6.15
ENV TERRAFORM_SHA256SUM=6d93290f980df15a453e907ea9a2ca8f8fed41143c220953c911b5174c3e3ab0

# Add install dependencies and retrieve files
RUN apk add --no-cache --virtual install-dependencies \
            curl \
&&  curl -LO --silent https://releases.hashicorp.com/terraform/${TERRAFORM_VERSION}/terraform_${TERRAFORM_VERSION}_linux_amd64.zip \
&&  curl -LO --silent https://releases.hashicorp.com/terraform/${TERRAFORM_VERSION}/terraform_${TERRAFORM_VERSION}_SHA256SUMS \

# Check & Install
&&  sed -i '/terraform_${TERRAFORM_VERSION}_linux_amd64.zip/!d' terraform_${TERRAFORM_VERSION}_SHA256SUMS \
&&  sha256sum -cs terraform_${TERRAFORM_VERSION}_SHA256SUMS \
&&  unzip terraform_${TERRAFORM_VERSION}_linux_amd64.zip -d /bin \

# Post-install Clean
&&  rm -f terraform_${TERRAFORM_VERSION}_* \
&&  apk del install-dependencies

ENTRYPOINT ["/bin/terraform"]
